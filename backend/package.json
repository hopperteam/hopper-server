    "@types/jest": "^24.0.22",
    "@types/mongoose": "^5.5.23",
    "@types/ws": "^6.0.4",
    "jest": "^24.9.0",
    "jest-teamcity-reporter": "^0.9.0",
    "newman": "^4.5.6",
    "newman-reporter-teamcity": "^0.1.12",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "cookie-parser": "^1.4.4",
